<!DOCTYPE html>
<html>
  <head>
    <title>RailsPokemon2Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div>
    <%= link_to "Log Out", logout_path, method: :delete %>
    <%= link_to "Add Pokemon", new_pokemon_path %>
    <%= link_to "All Pokemon", pokemons_path %>
    <%= link_to "Add a Capture", new_capture_path %>
    <%= link_to "All Captures", captures_path %>
    <%= link_to "All Regions", regions_path %>
  </div>

  <body>
    <%= yield %>
  </body>
</html>